{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@babel/cli": "7.7.7",
    "@babel/core": "7.7.7",
    "@babel/plugin-proposal-class-properties": "7.7.4",
    "@babel/plugin-proposal-optional-chaining": "7.7.5",
    "@babel/plugin-transform-typescript": "7.7.4",
    "@babel/preset-env": "7.7.7",
    "@babel/preset-react": "7.7.4",
    "@babel/preset-typescript": "7.7.7",
    "@changesets/cli": "2.4.1",
    "@types/jest": "24.0.25",
    "@types/node": "13.1.2",
    "@types/react": "16.9.17",
    "@typescript-eslint/eslint-plugin": "2.14.0",
    "@typescript-eslint/parser": "2.14.0",
    "@vue/test-utils": "1.0.0-beta.30",
    "babel-core": "7.0.0-bridge.0",
    "commitizen": "4.0.3",
    "cz-lerna-changelog": "2.0.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-import": "2.19.1",
    "eslint-plugin-prettier": "3.1.2",
    "jest": "24.9.0",
    "lerna": "3.20.2",
    "prettier": "1.19.1",
    "react": "16.12.0",
    "ts-jest": "24.2.0",
    "typescript": "3.7.4",
    "vue": "2.6.11",
    "vue-template-compiler": "2.6.11"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "scripts": {
    "prebuild": "tsc",
    "build": "lerna exec --parallel 'BABEL_ENV=build babel src --out-dir dist --source-maps --extensions .ts,.tsx --config-file ../../babel.config.js --delete-dir-on-start --no-comments'",
    "lint:ts": "eslint 'packages/**/*.ts{,x}'",
    "fix": "yarn lint:ts --fix",
    "test": "jest",
    "commit": "git-cz",
    "prerelease": "yarn build",
    "release": "lerna publish",
    "build:declarations": "lerna exec --parallel 'tsc --project ./tsconfig.build.json'",
    "postbuild": "yarn build:declarations",
    "bootstrap": "lerna bootstrap",
    "changeset": "changeset",
    "publish-ci": "lerna publish from-package -y --no-verify-access"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
